import React, { useState } from 'react';
import {
  Box, Grid, Paper, TextField, Button, Typography, Link, Stack
} from '@mui/material';

export default function Login() {
  const [email, setEmail] = useState('');
  const [password, setPassword] = useState('');

  const onSubmit = (e) => {
    e.preventDefault();
    // TODO: здесь будет реальный вызов API авторизации
    // fetch('/api/auth/login', { method:'POST', body: JSON.stringify({email, password}) ... })
    alert(`Sign in: ${email}`);
  };

  return (
    <Grid container sx={{ minHeight: '100vh' }}>
      {/* Левая лиловая панель */}
      <Grid
        item xs={12} md={6}
        sx={{
          bgcolor: '#D9D4FF', // подгони под точный цвет из Figma
          position: 'relative'
        }}
      >
        {/* Карточка входа, выровненная по макету (слева-сверху/по центру вертикально) */}
        <Box
          sx={{кК
            position: { xs: 'static', md: 'absolute' },
            top: { md: '28%' },
            left: { md: '8%' },
            px: { xs: 2, md: 0 },
            width: { xs: '100%', md: 320 },
          }}
        >
          <Paper elevation={1} sx={{ p: 2.5, borderRadius: 2 }}>
            <Stack component="form" onSubmit={onSubmit} spacing={1.75}>
              <div>
                <Typography variant="caption" color="text.secondary">Email</Typography>
                <TextField
                  fullWidth size="small" placeholder="Value"
                  value={email} onChange={(e)=>setEmail(e.target.value)}
                  sx={{ mt: 0.5 }}
                />
              </div>

              <div>
                <Typography variant="caption" color="text.secondary">Password</Typography>
                <TextField
                  fullWidth size="small" placeholder="Value" type="password"
                  value={password} onChange={(e)=>setPassword(e.target.value)}
                  sx={{ mt: 0.5 }}
                />
              </div>

              <Button
                type="submit" variant="contained"
                sx={{
                  mt: 0.5,
                  bgcolor: '#4F2CE6', // фиолетовая кнопка как на макете
                  '&:hover': { bgcolor: '#3e22b8' },
                  textTransform: 'none', fontWeight: 600
                }}
              >
                Sign In
              </Button>

              <Link href="#" underline="hover" sx={{ fontSize: 14, mt: 0.5 }}>
                Forgot password?
              </Link>
            </Stack>
          </Paper>
        </Box>
      </Grid>

      {/* Правая белая область */}
      <Grid item xs={12} md={6} sx={{ bgcolor: '#FFFFFF' }} />
    </Grid>
  );
}
